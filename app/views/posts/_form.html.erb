<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :タイトル, style: "display: block" %>
    <%= form.text_field :title , class: "post-title-input" %>
  </div>

  <div>
    <%= form.label :本文, style: "display: block" %>
    <%= form.textarea :body, class: "post-body-input" %>
  </div>

  <div>
  <%= form.submit value: "投稿", class: "create-post" %>
  </div>
<% end %>
